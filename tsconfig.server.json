{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",
    "noEmit": false
  },
  // server source is in `server/` (not backend/). Compile that directory into dist/.
  "include": ["server/**/*.ts"],
  "exclude": ["src"]
}